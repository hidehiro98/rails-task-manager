<h1>Tasks list</h1>

<% @tasks.each do |task| %>
  <ul>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= task.detail %>
      <%= task.done %>
      <%= link_to 'Edit', edit_task_path(task) %>
      <%#= link_to 'Delete', "/tasks/#{task.id}", method: :delete %>
      <%= link_to 'Delete', task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" }
        %>
    </li>
  </ul>
<% end %>

<%= link_to 'Create new task', new_task_path %>
